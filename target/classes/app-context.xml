<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
  <bean id="peperoni"
        class="com.lep4.restaurante.Pizza">
        <property name="nombre" value="Pizza de Peperoni"></property>
        <property name="precio" value="9"></property>
        <property name="porciones" value="8" ></property>
        <property name="tipoMasa" value="Alta" ></property>
  </bean>
  
    <bean id="suprema"
        class="com.lep4.restaurante.Pizza">
        <property name="nombre" value="Pizza Suprema"></property>
        <property name="precio" value="11"></property>
        <property name="porciones" value="8" ></property>
        <property name="tipoMasa" value="Delgada" ></property>
  </bean>
  
  
  <bean id="bigking" class="com.lep4.restaurante.Hamburguesa">
   <property name="nombre" value="Hamburguesa BigKing"></property>
    <property name="precio" value="7"></property>
  	<property name="tipoCarne" value="Res"></property>
  </bean>
       
   <bean id="quesoLoroco" class="com.lep4.restaurante.Pupusa">
    	<property name="nombre" value="Pupusa Queso con Loroco"></property>
        <property name="precio" value="0.75"></property>
   		<property name="tipoDeMasa" value="arroz"></property>
   		<property name="extras">
   			<list>
   				<value type="java.lang.String">Loroco</value>
   				<value type="java.lang.String">Salsa Picante</value>
   				<value type="java.lang.String">Curtido</value>
   			</list>
   		</property>
   </bean>
   

  
</beans>